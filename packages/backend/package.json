{
  "name": "@estatemetrics/backend",
  "version": "1.0.1",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "start": "yarn dev",
    "rename:mjs": "./scripts/rename.sh",
    "compile": "tsc --incremental",
    "watch": "yarn run compile --watch",
    "lint": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js.mjs,cjs,md}\"",
    "test": "yarn vitest",
    "elasticsearch:start": "docker-compose -f ../dockers/dev/docker-compose.yml up -d",
    "prod:start": "yarn docker:shutdown ; docker-compose up -d",
    "dev": "yarn elasticsearch:start && yarn nodemon",
    "build": "rm -rf ./dist && yarn vite build --mode production",
    "serve": "yarn pm2 start ./dist/server.prod.js",
    "serve:prod": "pm2 start ./dist/server.prod.js",
    "build:serve": "yarn build && yarn serve",
    "docker:build": "yarn docker:shutdown ; docker build -t estate-metrics --progress=plain .",
    "docker:shutdown": "docker stop estate-metrics && docker rm -v estate-metrics && docker rm -f estate-metrics",
    "docker:purge": "docker system prune -a -f",
    "docker:up": "yarn docker:shutdown; docker run -it --name estate-metrics -p 4000:5000 estate-metrics",
    "docker:up:debug": "yarn docker:shutdown; docker run -it --name estate-metrics -p 4000:5000 --entrypoint=/bin/bash estate-metrics",
    "docker:ssh": "docker exec -it estate-metrics /bin/bash",
    "logs": "yarn pm2 logs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@elastic/elasticsearch": "^8.13.1",
    "body-parser": "^1.20.2",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "mongoose": "^8.3.3",
    "node-fetch": "^3.3.2",
    "node-schedule": "^2.1.1",
    "pm2": "^5.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@faker-js/faker": "^8.4.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@typegoose/typegoose": "^12.4.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.13",
    "@types/supertest": "^6.0.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "8.0.0-alpha.24",
    "@typescript-eslint/parser": "8.0.0-alpha.24",
    "@yarnpkg/pnpify": "^4.1.0",
    "concurrently": "^8.2.2",
    "csv-parse": "^5.5.5",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "graphql-scalars": "^1.23.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "nock": "^13.5.4",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "puppeteer": "^22.7.1",
    "reflect-metadata": "^0.2.2",
    "rollup-plugin-exclude-dependencies-from-bundle": "^1.1.23",
    "supertest": "^7.0.0",
    "type-graphql": "2.0.0-rc.1",
    "typescript": "^5.4.5",
    "vite": "^4.0.0",
    "vite-plugin-node": "^3.1.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "overrides": {
    "vite-plugin-node": {
      "vite": "^5.0.0"
    }
  },
  "volta": {
    "node": "22.0.0",
    "yarn": "4.2.2"
  }
}
