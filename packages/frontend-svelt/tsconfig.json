{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "$lib":["./src/lib"],
      "$lib/*":["./src/lib/*"],
      "$utils/*": ["./src/utils/*"],
      "$components/*": ["./src/components/*"],
      "@backend/*": ["../backend/src/*"],
      "@opendata/frontend/*": ["./src/*"] 
    },
    "isolatedModules": true,
    "types": ["svelte"],
  }
}
